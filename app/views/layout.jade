doctype 5
html(lang="zh-CN")
  head
    meta(charset="utf-8")
    title Tgideas - 需求管理系统
    meta(name="author",content="sonichuang@tencent.com")
    meta(name="Copyright",content="Tencent Tgideas")
    meta(name="Description",content="Tgideas - 需求管理系统")
    link(rel='stylesheet', href='/css/jquery-ui.min.css')
    link(rel='stylesheet', href='/css/comm.css')
  body
    div.page
      .header
          h1.mtitle 需求管理系统 v1.0
          .navigation(role='navigation')
            ul.nav-ul
              li
                a(href='/') 系统首页
              li
                a(href='/task') 需求管理
              li
                a(href='/export') 数据导出
              li
                a(href='/setting-project') 系统设置
          .user-info
            if user
            .user-info-avatar
              img(src='http://r.hrc.oa.com/photo/100/#{user.rtx}.png', width='36', height='36', alt='sonichuang')
            .user-info-txt
              p
                span#userRtx= user.rtx 
                span.gray (#{user.nick})
                - var local = "localhost:3000"
              p
                span#userRoles.gray
                | [
                a(href='http://www.oa.com/api/loginout.ashx?ref='+local) 退出
                | ]
              //- p #{user.uid}
      div.content
        block content

    //- m-dialog (角色选择弹层)
    div.m-dialog.dialog-select-roles
      .m-dialog-box
        .m-dialog-hd
          h3 请选择您的角色
        .m-dialog-bd
          form#selectRolesForm.select-roles-form(action='')
            p.tcenter.user-select-rtx
              span 英文名 
              input(value='#{user.rtx}',readonly='true')
              input#userRolesSet(name='roles',type='hidden',value='0')
              input(name="create_date",type='hidden',value="#{Date()}")
            ul.user-select-roles
              li
                h4 产品经理
                label(for='userRolesPD')
                  img(src='../img/role-pm.png', alt='我是产品经理', width='120', height='120')
                p.tcenter
                  input#userRolesPD(type='radio', value='1', name='userRolesSelect')
                p.tcenter
                  select#userProject(name='project')
                    option(value='0', selected='selected') 请选项您负责的项目
              li
                h4 网页重构师
                label(for='userRolesRB')
                  img(src='../img/role-rb.png', alt='我是网页重构', width='120', height='120')
                p.tcenter
                  input#userRolesRB(type='radio', value='3', name='userRolesSelect')
                p.tcenter
                  select#userGroup(name='group')
                    option(value='0', selected='selected') 请选项组别
                    option(value='1') 重构一组
                    option(value='2') 重构二组
                    option(value='3') 重构三组
            p.user-select-roles-btn
              input.m-btn.btn-skin-2(type='submit', value='确认确色')

    .footer
      p.copyright
        | Copyright © 1998-2013 TENCENT.ALL RIGHT RESERVED.
        span
          | Power by:
          a(href='#') Tgideas.qq.com
          | {架构二组}

    script(src="/js/jquery/jquery-1.10.2.min.js")
    script(src="/js/jquery/ui/jquery-ui-1.10.3.custom.min.js")
    script(src="/js/app/comm/app-ajax.js")
    script(src="/js/app/user/user.js")
    //- script(src="/js/jquery/jquery.ui.datepicker.js")
    //- script(src="/js/comm.js")
    block pageScript
